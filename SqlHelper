using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Data;
using System.Configuration;
using System.Data.SqlClient;

namespace EmployeeManager
{
    public class SqlHelper
    {
        private static readonly string connection = "Data Source=.;Initial Catalog=SaleManager;Integrated Security=True";

        /// 执行数据库的增改操作
        /// </summary>
        /// <param name="sql">SQL语句</param>
        /// <param name="type">语句类型,SQLTEXT或存储过程</param>
        /// <param name="ps">参数数组</param>
        /// <returns>业务操作结果</returns>
        public static int ExecNonQuery(string sql, CommandType type, params SqlParameter[] ps)
        {
            using (SqlConnection con = new SqlConnection(connection))
            {
                con.Open();
                using (SqlCommand com = new SqlCommand(sql, con))
                {
                    com.CommandType = type;
                    com.Parameters.AddRange(ps);

                    return com.ExecuteNonQuery();
                }
            }
        }

        /// 执行数据库的增改操作
        /// </summary>
        /// <param name="sql">SQL语句</param>
        /// <param name="type">语句类型,SQLTEXT或存储过程</param>
        /// <param name="ps">参数数组</param>
        /// <returns>业务操作结果</returns>
        public static int ExecNonQuery(string sql)
        {
            using (SqlConnection con = new SqlConnection(connection))
            {
                con.Open();
                using (SqlCommand com = new SqlCommand(sql, con))
                {
                    return com.ExecuteNonQuery();
                }
            }
        }

        /// <summary>
        /// 获取数据表Table
        /// </summary>
        /// <param name="sql">SQL语句</param>
        /// <param name="type">语句类型,SQLTEXT或存储过程</param>
        /// <param name="ps">参数数组</param>
        /// <returns>DataTable</returns>
        public static DataTable GetDataTable(string sql, CommandType type, params SqlParameter[] ps)
        {
            using (SqlConnection con = new SqlConnection(connection))
            {
                con.Open();
                using (SqlDataAdapter da = new SqlDataAdapter(sql, con))
                {
                    DataTable dt = new DataTable();
                    da.SelectCommand.CommandType = type;
                    da.SelectCommand.Parameters.AddRange(ps);
                    da.Fill(dt);
                    return dt;
                }
            }
        }

        /// <summary>
        /// 执行数据库的增改操作
        /// </summary>
        /// <param name="sql">SQL语句</param>
        /// <param name="type">语句类型,SQLTEXT或存储过程</param>
        /// <param name="ps">参数数组</param>
        /// <returns>业务操作结果</returns>
        public static object ExecuteScalar(string sql, CommandType type, params SqlParameter[] ps)
        {
            using (SqlConnection con = new SqlConnection(connection))
            {
                con.Open();
                using (SqlCommand com = new SqlCommand(sql, con))
                {
                    com.CommandType = type;
                    com.Parameters.AddRange(ps);

                    return com.ExecuteScalar();
                }
            }
        }

        /// <summary>
        /// 返回数据内存集合
        /// </summary>
        /// <param name="sql">SQL语句</param>
        /// <param name="type">语句类型,SQLTEXT或存储过程</param>
        /// <param name="ps">参数数组</param>
        /// <returns>内存表</returns>
        public static DataSet GetDataSet(string sql, CommandType type, params SqlParameter[] ps)
        {
            using (SqlConnection con = new SqlConnection(connection))
            {
                con.Open();
                using (SqlDataAdapter da = new SqlDataAdapter(sql, con))
                {
                    DataSet ds = new DataSet();
                    da.SelectCommand.CommandType = type;
                    da.SelectCommand.Parameters.AddRange(ps);
                    da.Fill(ds);

                    return ds;
                }
            }
        }
    }
}
